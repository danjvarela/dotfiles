#!/bin/sh

# Resolve asdf conflicts
echo "Overwriting files in $HOME"
yadm checkout $HOME

# create directories
source ./directories.sh

# install packages and apps from homebrew
source ./brew.sh

# install the latest version of nodejs
source ./nodejs.sh

# install the latest version of ruby
# install the latest version of rails
source ./ruby_on_rails.sh

# install rust (some neovim plugins use cargo)
source ./rust.sh

# setup zsh syntax highlighting and autosuggestions
source ./zsh.sh

# load iterm preferences
source ./iterm.sh

# setup neovim
source ./neovim.sh

# setup tmux
source ./tmux.sh

# set wallpaper
source ./wallpaper.sh

# setup mac preferences
source ./mac_preferences.sh

echo "Success"
